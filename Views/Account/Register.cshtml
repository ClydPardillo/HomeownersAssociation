@model HomeownersAssociation.Models.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<section class="d-flex align-items-center justify-content-center min-vh-100" style="background-color: #f8f9fa;">
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-12 col-md-10 col-lg-8 col-xl-6">
                <div class="card shadow-2-strong rounded-6">
                    <div class="card-header bg-dark text-white">
                        <h2 class="text-center oswald-heading mb-0">@ViewData["Title"]</h2>
                        <p class="text-center mb-0 oswald-light">Create a new account for the Homeowners Association</p>
                    </div>
                    <div class="card-body lora-body p-4">
                        <form id="registerForm" method="post" enctype="multipart/form-data">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="row">
                                <div class="col-md-6">
                                    <h4 class="oswald-subheading">Personal Information</h4>
                                    <hr class="my-3" />
                                    <!-- First Name input -->
                                    <div class="form-outline mb-4">
                                        <input asp-for="FirstName" class="form-control border" autocomplete="firstname" aria-required="true" />
                                        <label asp-for="FirstName" class="form-label"></label>
                                        <span asp-validation-for="FirstName" class="text-danger"></span>
                                    </div>
                                    <!-- Last Name input -->
                                    <div class="form-outline mb-4">
                                        <input asp-for="LastName" class="form-control border" autocomplete="lastname" aria-required="true" />
                                        <label asp-for="LastName" class="form-label"></label>
                                        <span asp-validation-for="LastName" class="text-danger"></span>
                                    </div>
                                    <!-- Email input -->
                                    <div class="form-outline mb-4">
                                        <input asp-for="Email" class="form-control border" autocomplete="username" aria-required="true" />
                                        <label asp-for="Email" class="form-label"></label>
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                    <!-- Password input -->
                                    <div class="form-outline mb-4">
                                        <input asp-for="Password" class="form-control border" autocomplete="new-password" aria-required="true" />
                                        <label asp-for="Password" class="form-label"></label>
                                        <span asp-validation-for="Password" class="text-danger" style="font-size: 0.8rem"></span>
                                    </div>
                                    <!-- Confirm Password input -->
                                    <div class="form-outline mb-4">
                                        <input asp-for="ConfirmPassword" class="form-control border" autocomplete="new-password" aria-required="true" />
                                        <label asp-for="ConfirmPassword" class="form-label"></label>
                                        <span asp-validation-for="ConfirmPassword" class="text-danger" style="font-size: 0.8rem"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <h4 class="oswald-subheading">Property Information</h4>
                                    <hr class="my-3" />
                                    <!-- Address input -->
                                    <div class="form-outline mb-4">
                                        <input asp-for="Address" class="form-control border" aria-required="true" />
                                        <label asp-for="Address" class="form-label"></label>
                                        <span asp-validation-for="Address" class="text-danger"></span>
                                    </div>
                                    <!-- Lot Number input -->
                                    <div class="form-outline mb-4">
                                        <input asp-for="LotNumber" class="form-control border" aria-required="true" />
                                        <label asp-for="LotNumber" class="form-label"></label>
                                        <span asp-validation-for="LotNumber" class="text-danger"></span>
                                    </div>
                                    <!-- Block Number input -->
                                    <div class="form-outline mb-4">
                                        <input asp-for="BlockNumber" class="form-control border" aria-required="true" />
                                        <label asp-for="BlockNumber" class="form-label"></label>
                                        <span asp-validation-for="BlockNumber" class="text-danger"></span>
                                    </div>
                                    <!-- Profile Picture input -->
                                    <div class="mb-4">
                                        <label asp-for="ProfilePicture" class="form-label"></label>
                                        <input asp-for="ProfilePicture" type="file" class="form-control border" />
                                        <span asp-validation-for="ProfilePicture" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="alert alert-info alert-gray mb-4">
                                <i class="bi bi-info-circle me-2"></i>
                                <span class="lora-bold">Your account will need to be approved by an administrator before you can log in.</span>
                            </div>
                            <div class="d-grid col-6 offset-3 gap-2 mt-4">
                                <button id="registerSubmit" type="submit" class="btn btn-dark btn-lg btn-block oswald-subheading">
                                    Register
                                </button>
                            </div>
                            <div class="mt-3 text-center">
                                <p>
                                    Already have an account? <a asp-action="Login" class="text-primary lora-italic">Log in</a>
                                </p>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}