@model HomeownersAssociation.Models.Facility

@{
    ViewData["Title"] = "Delete Facility";
}

<div class="container mt-4">
    <h1 class="display-4 text-danger">Delete Facility</h1>
    <h3>Are you sure you want to delete this facility?</h3>
    <p class="text-danger">This action cannot be undone.</p>
    <hr />

    <div class="card shadow-sm mb-4">
        <div class="card-header">
            <h5 class="mb-0">Facility Details</h5>
        </div>
        <div class="card-body">
            <dl class="row">
                 <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.Name)
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.Description)
                </dt>
                <dd class = "col-sm-10">
                    @(Model.Description ?? "N/A")
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.Capacity)
                </dt>
                <dd class = "col-sm-10">
                     @(Model.Capacity?.ToString() ?? "N/A")
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.RatePerHour)
                </dt>
                <dd class = "col-sm-10">
                    @(Model.RatePerHour?.ToString("C") ?? "Free")
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.IsActive)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.IsActive)
                </dd>
            </dl>
        </div>
    </div>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">
            <i class="bi bi-trash me-1"></i> Delete Facility
        </button> 
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-x-circle me-1"></i> Cancel
        </a>
    </form>
</div> 