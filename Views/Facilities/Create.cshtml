@model HomeownersAssociation.Models.ViewModels.FacilityViewModel

@{
    ViewData["Title"] = "Create Facility";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-md-6">
            <h1 class="display-4 text-primary">Create New Facility</h1>
        </div>
        <div class="col-md-6 text-end">
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back to Facilities
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Facility Details</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label"></label>
                            <input asp-for="Name" class="form-control" placeholder="e.g., Clubhouse, Swimming Pool"/>
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Description" class="form-label"></label>
                            <textarea asp-for="Description" class="form-control" rows="3" placeholder="Enter a brief description"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Capacity" class="form-label"></label>
                                <input asp-for="Capacity" class="form-control" type="number" min="1" placeholder="Optional"/>
                                <span asp-validation-for="Capacity" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="RatePerHour" class="form-label"></label>
                                <div class="input-group">
                                     <span class="input-group-text">â‚±</span>
                                    <input asp-for="RatePerHour" class="form-control" type="number" step="0.01" min="0" placeholder="Optional, e.g., 500.00"/>
                                </div>
                                <span asp-validation-for="RatePerHour" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="MaintenanceSchedule" class="form-label"></label>
                            <textarea asp-for="MaintenanceSchedule" class="form-control" rows="2" placeholder="Optional, e.g., Every Monday 8 AM - 10 AM"></textarea>
                            <span asp-validation-for="MaintenanceSchedule" class="text-danger"></span>
                        </div>

                        <div class="form-check mb-3">
                            <input class="form-check-input" type="checkbox" asp-for="IsActive">
                            <label class="form-check-label" asp-for="IsActive">
                                Facility is currently active and available for booking
                            </label>
                        </div>
                        
                        <div class="form-group text-end mt-4">
                            <button type="submit" class="btn btn-primary">
                                 <i class="bi bi-save me-1"></i> Create Facility
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 