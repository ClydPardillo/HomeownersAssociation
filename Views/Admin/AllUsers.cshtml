@model IEnumerable<HomeownersAssociation.Models.ApplicationUser>

@{
    ViewData["Title"] = "All Users";
}

<div class="container">
    <h1 class="mb-4 oswald-heading mt-2">@ViewData["Title"]</h1>
    
    <div class="mb-3">
        <a asp-action="Index" class="btn btn-secondary">Back to Dashboard</a>
    </div>
    
    @if (!Model.Any())
    {
            <div class="alert alert-info">
                <i class="bi bi-info-circle"></i> There are no users in the system.
            </div>
    }
    else
    {
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark oswald-heading">
                        <tr>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Address</th>
                            <th>Block/Lot</th>
                            <th>User Type</th>
                            <th>Status</th>
                            <th>Registration Date</th>
                        </tr>
                    </thead>
                    <tbody class="lora-body">
                        @foreach (var user in Model)
                        {
                                <tr>
                                    <td>@user.FirstName @user.LastName</td>
                                    <td>@user.Email</td>
                                    <td>@user.Address</td>
                                    <td>Block @user.BlockNumber, Lot @user.LotNumber</td>
                                    <td>@user.UserType</td>
                                    <td>
                                        @if (user.IsApproved)
                                        {
                                                <span class="badge bg-success">Approved</span>
                                        }
                                        else
                                        {
                                                <span class="badge bg-warning text-dark">Pending</span>
                                        }
                                    </td>
                                    <td>@user.RegistrationDate.ToString("MMM dd, yyyy")</td>
                                </tr>
                        }
                    </tbody>
                </table>
            </div>
    }
</div> 