@{
    ViewData["Title"] = "Home";
}

<!-- Hero Section with Video Background -->
<div class="hero-section position-relative mb-5 w-100">
    <div class="video-background">
        <video autoplay muted loop playsinline class="video-bg">
            <source src="/images/0311.mp4" type="video/mp4">
            <!-- Fallback to image -->
            <div class="hero-image"
                style="background-image: url('/images/wallpaperflare.com_wallpaper.jpg'); height: 600px; background-size: cover; background-position: center;">
            </div>
        </video>
        <!-- Overlay to make text more visible on video -->
        <div class="video-overlay"></div>
    </div>
    <div class="position-absolute top-50 start-50 translate-middle text-center text-white w-75 hero-content">
        <h1 class="display-4 fw-bold oswald-heading mb-3 text-uppercase" style="letter-spacing: 4px;">747 Homeowners
            Association</h1>
        <p class="fs-5 mb-4 lora-body" style="text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.7);">Sanciangko St,</p>
        <p class="fs-5 mb-4 lora-body" style="text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.7);">Cebu City</p>
        <a class="btn btn-dark btn-md text-white mt-5 ripple" href="#about" data-mdb-ripple-color="light">Learn More</a>
    </div>
</div>

<!-- Welcome Section -->
<section id="about" class="py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6 mb-4 mb-md-0">
                <h2 class="fw-bold oswald-heading mb-4">Welcome to Our Community</h2>
                <p class="lora-body">The 747 Homeowners Association is dedicated to maintaining the highest standards of
                    community living. Our association works tirelessly to ensure a safe, beautiful, and harmonious
                    environment for all residents.</p>
                <p class="lora-body">Located in the heart of Cebu City, our community offers exceptional amenities,
                    well-maintained common areas, and a strong sense of belonging.</p>
                <div class="mt-4">
                    <a asp-controller="Announcements"
                        asp-action="@(User?.Identity?.IsAuthenticated == true ? "Index" : "Public")"
                        class="btn btn-outline-dark mb-4 mb-md-2 me-lg-2 ripple" data-mdb-ripple-color="dark">Community Announcements</a>
                    @if (User?.Identity?.IsAuthenticated != true)
                    {
                        <a asp-controller="Account" asp-action="Login"
                            class="btn btn-dark mb-4 ms-2 ms-md-0 mb-lg-2 ripple" data-mdb-ripple-color="light">Resident Login</a>
                    }
                </div>
            </div>
            <div class="col-md-6">
                <div id="carouselExample" class="carousel slide carousel-fade" data-mdb-ride="carousel" data-mdb-interval="2000">
                    <div class="carousel-inner rounded-5 shadow-3-strong">
                        <div class="carousel-item active">
                            <img src="/images/wallpaperflare.com_wallpaper.jpg" class="d-block w-100 img-fluid hover-zoom" alt="Community view 1">
                        </div>
                        <div class="carousel-item">
                            <img src="/images/wallpaperflare.com_wallpaper-5.jpg" class="d-block w-100 img-fluid hover-zoom" alt="Community view 2">
                        </div>
                        <div class="carousel-item">
                            <img src="/images/wallpaperflare.com_wallpaper-6.jpg" class="d-block w-100 img-fluid hover-zoom" alt="Community view 3">
                        </div>
                    </div>
                    <button class="carousel-control-prev" type="button" data-mdb-target="#carouselExample" data-mdb-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-mdb-target="#carouselExample" data-mdb-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Features Section -->
<section class="py-5 bg-light">
    <div class="container">
        <h2 class="text-center fw-bold oswald-heading mb-5">Community Features</h2>
        <div class="row g-4">
            <div class="col-lg-4 col-md-6 mb-4 mb-lg-0">
                <div class="card h-100 shadow-2-strong hover-shadow">
                    <img src="/images/feature-security.jpg" class="img-fluid rounded-top hover-zoom" alt="Security feature">
                    <div class="card-body text-center p-4">
                        <h5 class="card-title oswald-subheading">Security</h5>
                        <p class="card-text lora-body">24/7 security personnel and CCTV monitoring throughout the
                            community for your peace of mind.</p>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 mb-4 mb-lg-0">
                <div class="card h-100 shadow-2-strong hover-shadow">
                    <img src="/images/feature-garden.webp" class="img-fluid rounded-top hover-zoom" alt="Garden feature">
                    <div class="card-body text-center p-4">
                        <h5 class="card-title oswald-subheading">Landscaped Gardens</h5>
                        <p class="card-text lora-body">Beautifully maintained gardens and green spaces for residents to
                            enjoy.</p>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 mx-auto mb-4 mb-lg-0">
                <div class="card h-100 shadow-2-strong hover-shadow">
                    <img src="/images/feature-event.jpg" class="img-fluid rounded-top hover-zoom" alt="Events feature">
                    <div class="card-body text-center p-4">
                        <h5 class="card-title oswald-subheading">Community Events</h5>
                        <p class="card-text lora-body">Regular social events and activities that foster a strong
                            community spirit.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Announcements Preview -->
<section class="py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6 mt-2 mt-md-0 mb-4 mb-md-0">
                <h2 class="fw-bold oswald-heading mb-4">Stay Informed</h2>
                <p class="lora-body">Keep up with the latest news and announcements from the association. From community
                    events to maintenance schedules, we make sure you're always in the loop.</p>
                <a asp-controller="Announcements"
                    asp-action="@(User?.Identity?.IsAuthenticated == true ? "Index" : "Public")"
                    class="btn btn-dark mt-3 ripple" data-mdb-ripple-color="light">View All Announcements</a>
            </div>
            <div class="col-md-6 mt-md-0 mt-2">
                <div class="card shadow-2-strong hover-shadow">
                    <div class="card-header bg-dark text-white">
                        <h5 class="mb-0 oswald-subheading">Recent Announcements</h5>
                    </div>
                    <div class="card-body">
                        <div class="list-group list-group-flush">
                            <a href="#" class="list-group-item list-group-item-action border-0 ripple" data-mdb-ripple-color="primary">
                                <div class="d-flex w-100 justify-content-between">
                                    <h6 class="mb-1 oswald-light">Community Meeting</h6>
                                    <small class="text-muted">3 days ago</small>
                                </div>
                                <p class="mb-1 text-truncate lora-body">Join us for the monthly community meeting this Saturday at
                                    10 AM.</p>
                            </a>
                            <a href="#" class="list-group-item list-group-item-action border-0 ripple" data-mdb-ripple-color="primary">
                                <div class="d-flex w-100 justify-content-between">
                                    <h6 class="mb-1 oswald-light">Garden Maintenance</h6>
                                    <small class="text-muted">1 week ago</small>
                                </div>
                                <p class="mb-1 text-truncate lora-body">Scheduled maintenance for the community gardens next week.
                                </p>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Call to Action -->
<section class="py-5 bg-dark text-white text-center">
    <div class="container">
        <h2 class="fw-bold oswald-heading mb-4">Join Our Community</h2>
        <p class="lora-body mx-auto" style="max-width: 700px;">Interested in becoming part of our vibrant community?
            Contact us to learn about available properties and how to join the 747 Homeowners Association.</p>
        <a href="#" class="btn btn-light btn-lg mt-3 ripple" data-mdb-ripple-color="dark">Contact Us</a>
    </div>
</section>

