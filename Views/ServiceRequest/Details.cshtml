@model HomeownersAssociation.Models.ServiceRequest

@{
    ViewData["Title"] = "Service Request Details";
}

<div class="container mt-4">
    <h1>Service Request #@Model.Id</h1>

    <div class="row mt-4">
        <div class="col-md-8">
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">Request Details</h5>
                </div>
                <div class="card-body">
                    <h4>@Model.Title</h4>
                    <div class="mb-3">
                        <span class="badge bg-@(Model.Status == "Completed" ? "success" : 
                                            Model.Status == "InProgress" ? "primary" : 
                                            Model.Status == "Cancelled" ? "danger" : "warning")">
                            @(Model.Status == "InProgress" ? "In Progress" : Model.Status)
                        </span>
                        <span class="badge bg-@(Model.Priority == 1 ? "danger" : Model.Priority == 2 ? "warning text-dark" : "info text-dark")">
                            @(Model.Priority == 1 ? "High Priority" : Model.Priority == 2 ? "Medium Priority" : "Low Priority")
                        </span>
                    </div>

                    <h5>Description</h5>
                    <p class="mb-4">@Model.Description</p>

                    <dl class="row">
                        <dt class="col-sm-3">Category</dt>
                        <dd class="col-sm-9">@Model.Category.Name</dd>

                        <dt class="col-sm-3">Status</dt>
                        <dd class="col-sm-9">
                            @switch (Model.Status)
                            {
                                case "Pending":
                                    <span>Pending Review</span>
                                    break;
                                case "InProgress":
                                    <span>In Progress</span>
                                    break;
                                case "Completed":
                                    <span>Completed on @Model.CompletedAt?.ToString("MM/dd/yyyy")</span>
                                    break;
                                case "Cancelled":
                                    <span>Cancelled on @Model.Cancelled?.ToString("MM/dd/yyyy")</span>
                                    break;
                                default:
                                    <span>@Model.Status</span>
                                    break;
                            }
                        </dd>
                    </dl>
                </div>
                <div class="card-footer">
                    <a asp-action="Index" class="btn btn-primary">Back to List</a>
                    @if (Model.Status == "Pending")
                    {
                        <a asp-action="Cancel" asp-route-id="@Model.Id" class="btn btn-outline-danger">Cancel Request</a>
                    }
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Timeline</h5>
                </div>
                <div class="card-body">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <div>
                                <strong>Submitted</strong>
                                <br />
                                <small class="text-muted">Your request was created</small>
                            </div>
                            <span class="badge bg-success rounded-pill">✓</span>
                        </li>
                        
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <div>
                                <strong>Under Review</strong>
                                <br />
                                <small class="text-muted">Staff is reviewing your request</small>
                            </div>
                            <span class="badge bg-@(Model.Status != "Pending" ? "success" : "secondary") rounded-pill">
                                @(Model.Status != "Pending" ? "✓" : "")
                            </span>
                        </li>
                        
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <div>
                                <strong>In Progress</strong>
                                <br />
                                <small class="text-muted">Work is being performed</small>
                            </div>
                            <span class="badge bg-@(Model.Status == "InProgress" || Model.Status == "Completed" ? "success" : "secondary") rounded-pill">
                                @(Model.Status == "InProgress" || Model.Status == "Completed" ? "✓" : "")
                            </span>
                        </li>
                        
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <div>
                                <strong>Completed</strong>
                                <br />
                                <small class="text-muted">Work has been completed</small>
                            </div>
                            <span class="badge bg-@(Model.Status == "Completed" ? "success" : "secondary") rounded-pill">
                                @(Model.Status == "Completed" ? "✓" : "")
                            </span>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div> 