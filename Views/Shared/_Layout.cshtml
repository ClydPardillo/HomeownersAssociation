@using Microsoft.AspNetCore.Identity
@using HomeownersAssociation.Models
@inject UserManager<HomeownersAssociation.Models.ApplicationUser> UserManager
@inject SignInManager<HomeownersAssociation.Models.ApplicationUser> SignInManager

<!DOCTYPE html>
<html lang="en" class="h-100">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Homeowners Association</title>

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Lora:ital,wght@0,400..700;1,400..700&family=Oswald:wght@200..700&display=swap"
        rel="stylesheet">

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/HomeownersAssociation.styles.css" asp-append-version="true" />
    
    @await RenderSectionAsync("Styles", required: false)
</head>

<body class="d-flex flex-column min-vh-100">

    <header class="sticky-top">
        <nav
            class="navbar navbar-expand-sm  navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow oswald-subheading ">
            <div class="container-fluid mx-3 mx-lg-5 mx-md-4">
                <!--Project Brand/Logo-->
                <a class="navbar-brand oswald-heading fs-1" style="letter-spacing: 5px;" asp-area=""
                    asp-controller="@(User.IsInRole("Admin") ? "Admin" : "Home")" asp-action="Index">747HOA</a>
                <!--End of Project Brand/Logo-->

                <!-- User greeting beside logo -->
                @if (User.Identity != null && User.Identity.IsAuthenticated)
                {
                    var user = await UserManager.GetUserAsync(User);
                    var displayName = user?.FirstName ?? User.Identity?.Name ?? "User";

                    <div class="ms-3 d-none d-sm-inline">
                        <span class="nav-link text-dark">Hello @displayName!</span>
                    </div>
                }

                <!--Hamburger Icon-->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <!--Hamburger Icon-->

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <div class="navbar-nav me-auto">
                        <!-- Left side empty for brand -->
                    </div>
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Announcements" asp-action="Index">Announcements</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Events" asp-action="Calendar">Events</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Billing" asp-action="MyBills">My Bills</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Reservations" asp-action="Index">Facilities</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="ServiceRequests" asp-action="Index">Service Requests</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Documents" asp-action="Index">Documents</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Forum" asp-action="Index">Community Forum</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Feedback" asp-action="Index">Feedback</a>
                            </li>
                            
                            <!-- New Security Dropdown Menu -->
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark" href="#" id="securityDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Security
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="securityDropdown">
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Security" asp-action="Index">Security Dashboard</a></li>
                                    <li><a class="dropdown-item" asp-area="" asp-controller="VisitorPasses" asp-action="Index">My Visitor Passes</a></li>
                                    <li><a class="dropdown-item" asp-area="" asp-controller="VisitorPasses" asp-action="Create">Request Visitor Pass</a></li>
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Vehicles" asp-action="Index">My Vehicles</a></li>
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Vehicles" asp-action="Create">Register Vehicle</a></li>
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Security" asp-action="EmergencyContacts">Emergency Contacts</a></li>
                                    @if (User.IsInRole("Admin") || User.IsInRole("Staff"))
                                    {
                                        <li><hr class="dropdown-divider"></li>
                                        <li><a class="dropdown-item" asp-area="" asp-controller="VisitorPasses" asp-action="Manage">Manage Visitor Passes</a></li>
                                        <li><a class="dropdown-item" asp-area="" asp-controller="Vehicles" asp-action="Manage">Manage Vehicles</a></li>
                                        <li><a class="dropdown-item" asp-area="" asp-controller="EmergencyContacts" asp-action="Index">Manage Emergency Contacts</a></li>
                                    }
                                </ul>
                            </li>

                            @if (User.IsInRole("Admin") || User.IsInRole("Staff"))
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle text-dark" href="#" id="adminStaffDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        Management
                                    </a>
                                    <ul class="dropdown-menu" aria-labelledby="adminStaffDropdown">
                                        <li><a class="dropdown-item" asp-area="" asp-controller="Admin" asp-action="Index">User Management</a></li>
                                        <li><a class="dropdown-item" asp-area="" asp-controller="Events" asp-action="Index">Manage Events</a></li>
                                        <li><a class="dropdown-item" asp-area="" asp-controller="Billing" asp-action="Index">Manage Bills</a></li>
                                        <li><a class="dropdown-item" asp-area="" asp-controller="Payments" asp-action="Index">Manage Payments</a></li>
                                        <li><a class="dropdown-item" asp-area="" asp-controller="Facilities" asp-action="Index">Manage Facilities</a></li>
                                        <li><a class="dropdown-item" asp-area="" asp-controller="Reservations" asp-action="Manage">Manage Reservations</a></li>
                                        <li><a class="dropdown-item" asp-area="" asp-controller="ServiceCategories" asp-action="Index">Manage Service Categories</a></li>
                                        <li><a class="dropdown-item" asp-area="" asp-controller="ServiceRequests" asp-action="Manage">Manage Service Requests</a></li>
                                        <li><a class="dropdown-item" asp-area="" asp-controller="Documents" asp-action="Manage">Manage Documents</a></li>
                                        <li><a class="dropdown-item" asp-area="" asp-controller="Feedback" asp-action="Index">Manage Feedback</a></li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li><a class="dropdown-item" asp-area="" asp-controller="ForumCategories" asp-action="Index">Manage Forum Categories</a></li>
                                    </ul>
                                </li>
                            }
                        }
                    </ul>
                     <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>

    </header>



    <div>
        <main role="main">

            @RenderBody()
        </main>
    </div>

    <!-- Footer - hidden for Admin users -->
    @if (!User.IsInRole("Admin"))
    {
        <footer class="sticky-bottom text-center text-lg-start bg-body-tertiary text-muted">
            <!-- Section: Links  -->
            <section class="bg-dark text-light py-1 oswald-subheading">
                <div class="container text-center text-md-start mt-5">
                    <!-- Grid row -->
                    <div class="row mt-3">
                        <!-- Grid column -->
                        <div class="col-md-3 col-lg-4 col-xl-3 mx-auto mb-4">
                            <!-- Content -->
                            <p class=" oswald-heading fs-4">
                                <a class="text-white" style="text-decoration: none; letter-spacing: 1px;" asp-area=""
                                    asp-controller="Home" asp-action="Index"> 747 Homeowners Association</a>
                            </p>
                            <p>Sanciangko St,</p>
                            <p>Cebu City,</p>
                            <p>6000 Cebu</p>
                        </div>
                        <!-- Grid column -->

                        <!-- Grid column -->
                        <div class="col-md-2 col-lg-2 col-xl-2 mx-auto mb-4">
                            <!-- Links -->
                            <h6 class="  mb-4 oswald-heading" style="letter-spacing: 1px;">
                                Community Links
                            </h6>
                            <p>
                                <a href="#!" class="text-reset" style="text-decoration: none;">Home Page</a>
                            </p>
                            <p>
                                <a href="#!" class="text-reset text-capitalize"
                                    style="text-decoration: none;">discussions</a>
                            </p>
                            <p>
                                <a asp-controller="Events" asp-action="Calendar" class="text-reset text-capitalize" style="text-decoration: none;">events</a>
                            </p>
                            <p>
                                <a asp-controller="Feedback" asp-action="Public" class="text-reset text-capitalize" style="text-decoration: none;">community feedback</a>
                            </p>
                            <p>
                                <a href="#!" class="text-reset text-capitalize" style="text-decoration: none;">community
                                    guidelines</a>
                            </p>
                        </div>
                        <!-- Grid column -->

                        <!-- Grid column -->
                        <div class="col-md-3 col-lg-2 col-xl-2 mx-auto mb-4">
                            <!-- Links -->
                            <h6 class="text-capitalize mb-4 oswald-heading" style="letter-spacing: 1px;">
                                My Account
                            </h6>
                            <!--If logged in this <a> should be remove -->
                            @if (User.Identity != null && !User.Identity.IsAuthenticated)
                            {
                                <p>
                                    <a class="text-reset" style="text-decoration: none;" asp-area="" asp-controller="Account"
                                        asp-action="Login">Login</a>
                                </p>
                            }
                            @if (User.Identity != null && User.Identity.IsAuthenticated)
                            {
                                <p>
                                    <a class="text-reset" style="text-decoration: none;" asp-area="" asp-controller="Account"
                                        asp-action="Profile">My Profile</a>
                                </p>
                            }
                            <p>
                                <a href="#!" class="text-reset" style="text-decoration: none;">Forgot Password?</a>
                            </p>
                            <p>
                                <a href="#!" class="text-reset" style="text-decoration: none;">Help</a>
                            </p>
                        </div>
                        <!-- Grid column -->

                        <!-- Grid column -->
                        <div class="col-md-3 col-lg-2 col-xl-2 mx-auto mb-md-0 mb-4 oswald-light"
                            style="font-size: 0.8rem;">
                            <!-- Links -->
                            <p><a class="text-white link-underline-dark " style="text-decoration: none;" asp-area=""
                                    asp-controller="Home" asp-action="Privacy"> Privacy Policy</a></p>

                            <p><a class=" text-white link-underline-dark" style="text-decoration: none;" asp-area=""
                                    asp-controller="Home" asp-action="TermsAndConditions">Terms & Conditions</a></p>
                        </div>

                        <!-- Grid column -->
                    </div>
                    <!-- Grid row -->
                </div>
            </section>
            <!-- Section: Links  -->

            <!-- Copyright -->
            <div class="text-center p-2 lora-body " style="background-color: rgba(0, 0, 0, 0.05); font-size: 0.8rem;">
                © 2025 Copyright:
                <a class="text-reset fw-bold" href="https://mdbootstrap.com/">747 Group</a>
            </div>
            <!-- Copyright -->
        </footer>
    }
    <!-- End Footer -->

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
